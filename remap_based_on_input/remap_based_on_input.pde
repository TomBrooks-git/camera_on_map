void worldDrawGrid()
{
 
 int i = 0;
 
 for(int row = 0; row < 32; row ++)
 {
  for(int col = 0; col < 32; col++)
  {
    if(worldGrid[row][col] == 1)
    {
     map[i] = new Tile(worldX + (col * 50), worldY + (row * 50), tileSize, tileSize, 1); 
    }
    else
    {
     map[i] = new Tile(worldX + (col * 50), worldY + (row * 50), tileSize, tileSize, 0);  
    }
    i++;
  }
 }
 noStroke();
 for(i = 0; i < map.length; i++)
 {
   if(map[i].tileRight < 0 || map[i].tileLeft > width || map[i].tileTop > height || map[i].tileBottom < 0)
   {
     continue;
   }
   else
   {
    map[i].show(); 
   }
 }
  
}


void setup()
