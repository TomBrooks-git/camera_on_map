}

void draw()
{
  background(255);
  worldDrawGrid();
  p.show();
  //p.update(left, right, up, down);
  p.checkTileCollision(map);
  p.checkBounds();
  
  textSize(50);
  text("Framerate: " + frameRate ,width/2, height / 8);
}


void keyPressed()
{
  if(key == 'w')
  {
   up = true;
   worldY += world_speed;
  }
  if(key == 's')
  {
   down = true;
   worldY -= world_speed;
  }
  if(key == 'a')
  {
   left = true;
   worldX += world_speed;
  }
  if(key == 'd')
  {
   right = true;
   worldX -= world_speed;
  }
  
}



void keyReleased()
{
  if(key == 'w')
  {
   up = false; 
  }
  if(key == 's')
  {
   down = false; 
  }
  if(key == 'a')
  {
   left = false; 
  }
  if(key == 'd')
  {
   right = false; 
  }
}
